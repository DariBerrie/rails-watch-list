<div class="container p-3">
  <h1>My movies</h1>
  <div class="list-container row-align-items-center">
    <div class="card my-3">
      <% @lists.each do |list| %>
        <div class="col">
          <div class="card-body w-25">
            <div class="card-title">
              <h3><%= link_to list.name, list_path(list) %></h3>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
