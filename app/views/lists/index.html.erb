<div class="container p-3">
  <h1>My movies</h1>
  <div class="list-container d-flex flex-row flex-wrap">
      <% @lists.each do |list| %>
          <div class="card w-25 m-3 p-2 rounded border-0">
            <div class="card-body">
              <div class="card-title d-flex justify-content-center">
                <h3><%= link_to list.name, list_path(list) %></h3>
              </div>
            </div>
          </div>
        <% end %>
  </div>
</div>
