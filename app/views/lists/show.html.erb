<div class="container">
  <h1><%= @list.name %></h1>

  <ul class="list-group">
    <% @movies.each do |movie| %>
      <li class="list-group-item w-50">
        <%= image_tag movie.poster_url, alt: "#{movie.title} Poster", width: 100 %>
        <p class="fw-bold mt-2"><%= movie.title %></p>
        <p><%= movie.overview %></p>
        <p>Rating: <%= movie.rating %></p>
        <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <p><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>
        <%= link_to "Delete movie",
              bookmark_path(bookmark), class: "text-danger text-decoration-none",
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
              %>
      </li>
    <% end %>
  </ul>
  <h4 class="mt-3">Add a new movie</h4>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit class: 'btn btn-primary'%>
  <% end %>

</div>
